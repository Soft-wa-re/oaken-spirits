  database:
    image: mysql:8.0.34
    env_file:
      - .env
    restart: unless-stopped
    hostname: oaken-mysql
    container_name: oaken-mysql
    environment:
      MYSQL_ROOT_PASSWORD: mysql
      MYSQL_USER: mysql
      MYSQL_PASSWORD: mysql
      MYSQL_DATABASE: oaken
    ports:
      - 3306:3306
    expose:
      - 3306
    volumes: 
      - oaken-mysql:/var/lib/mysql
      - ./app/mysql-startup:/docker-entrypoint-initdb.d
    networks:
      - oaken
    healthcheck:
      test: ["CMD-SHELL", "mysqladmin ping -h localhost"]
      interval: 10s
      retries: 5
      timeout: 5s

CREATE USER 'airbyte'@'%' IDENTIFIED BY 'airbyte';
    GRANT RELOAD, REPLICATION SLAVE, REPLICATION CLIENT ON *.* TO 'airbyte'@'%';
    GRANT ALL PRIVILEGES ON oaken.* TO 'airbyte'@'%';
    FLUSH PRIVILEGES;